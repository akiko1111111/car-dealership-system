@startuml
!theme plain

left to right direction

actor "Покупатель" as Customer

rectangle "Система автосалона" {
  usecase "Авторизация" as UC1
  usecase "Просмотр каталога автомобилей" as UC2
  usecase "Выбор автомобиля" as UC3
  usecase "Просмотр характеристик автомобиля" as UC4
  usecase "Создание бронирования" as UC5
  usecase "Подтверждение бронирования" as UC6
  usecase "Ввод контактных данных" as UC7
  usecase "Проверка наличия автомобиля" as UC8
  usecase "Просмотр бронирований" as UC9
}

' Связи актора с use cases
Customer -- UC1

UC1 -- UC9
UC1 -- UC2
UC2 -- UC3
UC3 -- UC8


' Include отношения
UC4 ..> UC3 : <<include>>
UC7 ..> UC8 : <<include>>


' Extend отношения
UC9 <.. UC6 : <<extend>>
UC8 <.. UC5 : <<extend>>

@enduml